@model Event

<div class="row pb-3">
   
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">

                    <div class="card-body pb-0">
                   
                    <div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center mb-0">
                            TicketPrice:
                            <span>
                                @Model.EventName
                            </span>
                        </p>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                TicketPrice:
                                <span>
                                    @@Model.EventDate
                                </span>
                            </p>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                TicketPrice:
                                <span>
                                    @Model.TicketPrice.ToString("c")
                                </span>
                            </p>
                        </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    TicketLocation:
                                    <span>
                                       @Model.Location
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                              seats available:
                                <span>
                                    @Model.AvailableSeats
                                </span>
                            </p>
                        </div>

                        <div class="col text-end pt-1">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index"  class="btn btn-outline-primary"> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</div>