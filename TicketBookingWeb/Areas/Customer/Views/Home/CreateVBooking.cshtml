@model TB.DataAccess.Models.VM.BookingCreateVM
<form asp-action="CreateVBooking">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">BookTicket</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="booking.CustomerName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="booking.CustomerName" class="form-control" />
                <span asp-validation-for="booking.CustomerName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="booking.EventId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="booking.EventId" class="form-select" asp-items="@Model.EventList">
                    <option disabled selected>--Select Event--</option>
                </select>
                <span asp-validation-for="booking.EventId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="booking.NumberOfTickets" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="booking.NumberOfTickets" class="form-control" rows="5"></textarea>
                <span asp-validation-for="booking.NumberOfTickets" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Home" class="btn-primary btn form-control ">Back </a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
