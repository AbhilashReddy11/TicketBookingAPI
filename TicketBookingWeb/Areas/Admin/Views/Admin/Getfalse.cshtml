@model IEnumerable<TB.DataAccess.Models.Event>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Events List</h1>
		</div>
		
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					EventName
				</th>
				<th>
					EventDescription
				</th>
				<th>
					EventDate
				</th>
				<th>
					Location
				</th>
				<th>
					AvailableSeats
				</th>
				<th>
					EventId
				</th>
				<th>
					TicketPrice
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.EventName</td>
					<td>@item.EventDescription</td>
					<td>@((item.EventDate).ToString())</td>
					<td>@item.Location</td>
					<td>@(item.AvailableSeats.ToString())</td>
					<td>@((item.EventId).ToString())</td>
					<td>@((item.TicketPrice).ToString("c"))</td>
					<td>
						<a asp-area="Admin" asp-controller="Admin" asp-action="Approve" asp-route-EventId="@item.EventId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-area="Admin" asp-controller="Admin" asp-action="Reject" asp-route-EventId="@item.EventId" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>